        <dependency>
            <groupId>com.chariot.backend</groupId>
            <artifactId>userlicense-service</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.chariot.backend</groupId>
            <artifactId>gateway-webapp</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.chariot.backend</groupId>
            <artifactId>gateway-hardware</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.chariot.backend</groupId>
            <artifactId>license-status-service</artifactId>
