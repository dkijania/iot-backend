    <artifactId>test-integration</artifactId>

    <properties>
        <measurement-service.port>8080</measurement-service.port>
        <measurement-service.debug.port>8001</measurement-service.debug.port>
        <userlicense-service.port>8081</userlicense-service.port>
        <userlicense-service.debug.port>8002</userlicense-service.debug.port>
        <license-status-service.port>8082</license-status-service.port>
        <license-status-service.debug.port>8003</license-status-service.debug.port>
        <gateway-hardware.port>8090</gateway-hardware.port>
        <gateway-hardware.debug.port>8004</gateway-hardware.debug.port>
        <gateway-webapp.port>8091</gateway-webapp.port>
        <gateway-webapp.debug.port>8005</gateway-webapp.debug.port>
